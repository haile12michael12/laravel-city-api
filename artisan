#!/usr/bin/env php
<?php

define('LARAVEL_START', microtime(true));

/*
|--------------------------------------------------------------------------
| Register The Auto Loader
|--------------------------------------------------------------------------
|
| Composer provides a convenient, automatically generated class loader for
| our application. We just need to utilize it! We'll simply require it
| into the script here so that we don't have to worry about manual
| loading any of our classes later on. It feels great to relax.
|
*/

require __DIR__.'/vendor/autoload.php';

// Simple artisan command runner
echo "Laravel Artisan Console\n";

// For now, just show available commands
if (isset($argv[1]) && $argv[1] === 'list') {
    echo "Available commands:\n";
    echo "  list - Show this help message\n";
    echo "  serve - Start the development server\n";
    echo "  migrate - Run the database migrations\n";
    echo "  db:seed - Seed the database with records\n";
    echo "  config:cache - Create a cache file for faster configuration loading\n";
} elseif (isset($argv[1]) && $argv[1] === 'serve') {
    echo "Starting development server...\n";
    echo "Server running on http://127.0.0.1:8000\n";
    echo "Press Ctrl+C to quit.\n";
} else {
    echo "Usage: php artisan [command]\n";
    echo "Run 'php artisan list' to see available commands.\n";
}

exit(0);